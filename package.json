{
  "name": "innvestai-website",
  "version": "1.0.0",
  "description": "Modern website for InnvestAI - empowering hotel investment decisions with AI-driven data",
  "main": "index.html",
  "scripts": {
    "start": "http-server -p 8000 -c-1",
    "build": "npm run minify:css && npm run minify:js",
    "minify:css": "cleancss -o css/styles.min.css css/styles.css",
    "minify:js": "uglifyjs js/main.js -o js/main.min.js --compress --mangle",
    "deploy:local": "powershell -ExecutionPolicy Bypass -File deploy-local.ps1",
    "deploy:local:force": "powershell -ExecutionPolicy Bypass -File deploy-local.ps1 -SkipConfirmation",
    "deploy:dev": "aws s3 sync . s3://innvestai-website-dev --delete --exclude '*.md' --exclude 'node_modules/*' --exclude 'package*.json'",
    "deploy:staging": "aws s3 sync . s3://innvestai-website-staging --delete --exclude '*.md' --exclude 'node_modules/*' --exclude 'package*.json'",
    "deploy:prod": "npm run build && aws s3 sync . s3://innvestai-com --delete --exclude '*.md' --exclude 'node_modules/*' --exclude 'package*.json' && npm run invalidate:cloudfront",
    "invalidate:cloudfront": "aws cloudfront create-invalidation --distribution-id $(aws cloudfront list-distributions --query \"DistributionList.Items[?contains(Aliases.Items, 'innvestai.com')].Id\" --output text) --paths \"/*\"",
    "lint:css": "stylelint css/*.css",
    "lint:js": "eslint js/*.js",
    "validate:html": "html-validate *.html",
    "lighthouse": "lighthouse http://localhost:8000 --output=html --output-path=./lighthouse-report.html",
    "lighthouse:ci": "lhci autorun"
  },
  "keywords": [
    "innvestai",
    "hotel",
    "investment",
    "ai",
    "real-estate",
    "valuation",
    "website"
  ],
  "author": "InnvestAI",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "eslint": "^8.57.0",
    "html-validate": "^8.7.4",
    "http-server": "^14.1.1",
    "lighthouse": "^11.4.0",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0",
    "uglify-js": "^3.17.4"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/innvestAI/innvestai-infrastructure.git",
    "directory": "innvestai-website"
  },
  "bugs": {
    "url": "https://github.com/innvestAI/innvestai-infrastructure/issues"
  },
  "homepage": "https://innvestai.com"
}
